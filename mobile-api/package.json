{
  "name": "@freecodecamp/mobile-api",
  "version": "1.0.0",
  "author": "freeCodeCamp <team@freecodecamp.org>",
  "license": "BSD-3-Clause",
  "private": true,
  "engines": {
    "node": ">=24",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "lint": "pnpm run lint:prettier && pnpm run lint:src",
    "lint:src": "eslint --max-warnings 0 .",
    "lint:prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "start": "NODE_ENV=production node prod/index.js",
    "test": "jest",
    "pre:build:schema": "cd ../mobile-app && dart run --enable-asserts lib/scripts/init_validation_schema.dart && mv ./lib/scripts/schema-keys.json ../mobile-api/src/schema-keys.json"
  },
  "dependencies": {
    "bree": "9.2.3",
    "dotenv": "16.5.0",
    "express": "4.19.2",
    "mongoose": "8.4.1",
    "node-fetch": "3.3.2",
    "rss-parser": "3.13.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "7.27.1",
    "@babel/preset-env": "7.27.2",
    "@babel/preset-typescript": "7.27.1",
    "@breejs/ts-worker": "2.0.0",
    "@eslint/js": "9.27.0",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "22.15.19",
    "eslint": "9.27.0",
    "eslint-config-prettier": "10.1.5",
    "nodemon": "3.1.10",
    "prettier": "3.5.3",
    "ts-jest": "29.3.4",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.1"
  }
}
